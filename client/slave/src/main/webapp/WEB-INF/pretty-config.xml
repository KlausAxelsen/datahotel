<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.0
                                   		http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.0.xsd">

	<!-- Begin RewriteRules -->
	<rewrite trailingSlash="remove" />
	<rewrite toCase="lowercase" />

	<url-mapping id="home">
		<pattern value="/" />
		<view-id value="/faces/index.jsf" />
	</url-mapping>
	
	<url-mapping id="owners">
		<pattern value="/browse" />
		<view-id value="/faces/owners.jsf" />
	</url-mapping>
	
	<url-mapping id="groups">
		<pattern value="/browse/#{owner : info.ownerShortName}" />
		<view-id value="/faces/groups.jsf" />
	</url-mapping>
	
	<url-mapping id="datasets">
		<pattern value="/browse/#{owner : info.ownerShortName}/#{group : info.groupShortName}" />
		<view-id value="/faces/datasets.jsf" />
	</url-mapping>
	
	<url-mapping id="dataset">
		<pattern
			value="/browse/#{owner : info.ownerShortName}/#{group : info.groupShortName}/#{dataset : info.datasetShortName}" />
		<view-id value="/faces/dataset.jsf" />
	</url-mapping>
	
	<url-mapping id="defs">
		<pattern value="/def" />
		<view-id value="/faces/defs.jsf" />
	</url-mapping>
	
	<url-mapping id="def">
		<pattern value="/def/#{def : info.defShortName}" />
		<view-id value="/faces/def.jsf" />
	</url-mapping>

	<url-mapping id="api">
		<pattern value="/api" />
		<view-id value="/faces/api.jsf" />
	</url-mapping>

</pretty-config>
