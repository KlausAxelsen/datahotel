<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.0
                                   		http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.0.xsd">

	<!-- Begin RewriteRules -->
	<rewrite trailingSlash="remove" />
	<rewrite toCase="lowercase" />

	<url-mapping id="owner">
		<pattern value="/#{/[a-z0-9\-]+/ owner : report.ownerShortName}" />
		<view-id value="/faces/owner.jsf" />
	</url-mapping>

	<url-mapping id="group" parentId="owner">
		<pattern value="/#{/[a-z0-9\-]+/ group : report.groupShortName}" />
		<view-id value="/faces/group.jsf" />
	</url-mapping>

	<url-mapping id="dataset" parentId="group">
		<pattern value="/#{/[a-z0-9\-]+/ dataset : report.datasetShortName}" />
		<view-id value="/faces/dataset.jsf" />
	</url-mapping>

</pretty-config>
