<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence     http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="test" transaction-type="RESOURCE_LOCAL">

		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<class>no.difi.datahotel.logic.model.Access</class>
		<class>no.difi.datahotel.logic.model.DatasetEntity</class>
		<class>no.difi.datahotel.logic.model.GroupEntity</class>
		<class>no.difi.datahotel.logic.model.DefinitionEntity</class>
		<class>no.difi.datahotel.logic.model.FieldEntity</class>
		<class>no.difi.datahotel.logic.model.OwnerEntity</class>
		<class>no.difi.datahotel.logic.model.ReportEntity</class>
		<class>no.difi.datahotel.logic.model.SettingEntity</class>
		<class>no.difi.datahotel.logic.model.UserEntity</class>
		<class>no.difi.datahotel.logic.model.VersionEntity</class>

		<shared-cache-mode>DISABLE_SELECTIVE</shared-cache-mode>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/test" />
			<property name="javax.persistence.jdbc.user" value="test" />
			<property name="javax.persistence.jdbc.password" value="test" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.logging.level" value="INFO" />
		</properties>

	</persistence-unit>

</persistence>
